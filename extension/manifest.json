{
  "manifest_version": 3,
  "name": "NY Times Spelling Bee Word Stats",
  "author": "Dan Harcsztark (dnstock)",
  "description": "Adds live word and letter statistics to the NYTimes Spelling Bee puzzle game.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nytimes.com/puzzles/spelling-bee*",
        "https://www.nytimes.com/games/spelling-bee*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}